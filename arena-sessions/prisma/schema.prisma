generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider            = "postgresql"
  url                 = env("DATABASE_URL")
  schemas             = ["base"]
}

model characters {
  id    String     @id
  name  String @db.Text
  class String @db.Text
  spec  String @db.Text

  @@schema("base")
}

model matches {
  id        String     @id
  charId    String     @db.Text
  isWin     Boolean    @default(false)
  arena     String     @db.Text
  team      String     @db.Text
  enemy     String     @db.Text

  @@schema("base")
}
